<%- include('../layout/header') %>

<section class="py-5">
    <div class="container">
        <!-- Welcome Section -->
        <div class="row mb-5">
            <div class="col-lg-12">
                <div class="card card-islamic shadow-lg">
                    <div class="card-body p-5 text-center">
                        <i class="fas fa-user-graduate fa-4x mb-3"></i>
                        <h2 class="fw-bold mb-2">Welcome, <%= student.name %>!</h2>
                        <p class="text-muted mb-0">
                            <strong>Admission Number:</strong> <%= student.admission_number %> | 
                            <strong>Class:</strong> <%= student.class || 'N/A' %>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Dashboard Cards -->
        <div class="row mb-5">
            <!-- Check Results Card -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card card-islamic shadow-sm h-100 hover-shadow">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-chart-bar fa-3x mb-3"></i>
                        <h5 class="card-title fw-bold">Check Results</h5>
                        <p class="card-text text-muted">View your academic results and grades</p>
                        <a href="/student/check-result" class="btn btn-islamic btn-sm">
                            <i class="fas fa-arrow-right me-2"></i>View Results
                        </a>
                    </div>
                </div>
            </div>

            <!-- Announcements Card -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card card-islamic shadow-sm h-100 hover-shadow">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-bell fa-3x mb-3"></i>
                        <h5 class="card-title fw-bold">Announcements</h5>
                        <p class="card-text text-muted">Stay updated with school announcements</p>
                        <a href="/student/announcements" class="btn btn-islamic btn-sm">
                            <i class="fas fa-arrow-right me-2"></i>View Announcements
                        </a>
                    </div>
                </div>
            </div>

            <!-- Profile Card -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card card-islamic shadow-sm h-100 hover-shadow">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-user-circle fa-3x mb-3"></i>
                        <h5 class="card-title fw-bold">My Profile</h5>
                        <p class="card-text text-muted">View and update your profile information</p>
                        <a href="/student/profile" class="btn btn-islamic btn-sm">
                            <i class="fas fa-arrow-right me-2"></i>View Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Info Section -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-islamic shadow-sm">
                    <div class="card-header py-3">
                        <h5 class="mb-0 fw-bold">
                            <i class="fas fa-info-circle me-2"></i>Quick Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <p class="mb-1"><strong>Email:</strong></p>
                                <p class="text-muted"><%= student.email %></p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <p class="mb-1"><strong>Admission Number:</strong></p>
                                <p class="text-muted"><%= student.admission_number %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Logout Button -->
        <div class="text-center mt-5">
            <a href="/auth/logout" class="btn btn-danger btn-lg">
                <i class="fas fa-sign-out-alt me-2"></i>Logout
            </a>
        </div>
    </div>
</section>

<style>
    .hover-shadow {
        transition: box-shadow 0.3s ease;
    }
    .hover-shadow:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

<%- include('../layout/footer') %>
