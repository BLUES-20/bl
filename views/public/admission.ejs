<%- include('../layout/header') %>

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold mb-4">Admission</h1>
                <p class="lead mb-4">
                    Join our Islamic School community. We welcome students who are committed
                    to academic excellence and Islamic values.
                </p>
                
                <div class="card shadow-sm mb-5 text-start">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="text-center mb-4 text-success">How to Get Your Registration Number</h3>
                        
                        <div class="row g-4">
                            <div class="col-md-4 text-center">
                                <div class="rounded-circle bg-success text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px; font-size: 24px;">1</div>
                                <h5>Register Online</h5>
                                <p class="text-muted small">Fill out the student application form with your personal details.</p>
                            </div>
                            <div class="col-md-4 text-center">
                                <div class="rounded-circle bg-success text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px; font-size: 24px;">2</div>
                                <h5>Get Reg. Number</h5>
                                <p class="text-muted small">System will instantly generate your unique <strong>Admission Number</strong>.</p>
                            </div>
                            <div class="col-md-4 text-center">
                                <div class="rounded-circle bg-success text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px; font-size: 24px;">3</div>
                                <h5>Login to Portal</h5>
                                <p class="text-muted small">Use your number to access the student dashboard.</p>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <a href="/auth/student-register" class="btn btn-success btn-lg px-5">Register Now</a>
                            <p class="mt-2 small text-muted">Already have a number? <a href="/auth/student-login">Login here</a></p>
                        </div>
                    </div>
                </div>

                <p class="mb-4">
                    For inquiries about fee structure and curriculum, please contact the administration.
                </p>
                <a href="/contact" class="btn btn-outline-primary">Contact Us</a>
            </div>
        </div>
    </div>
</section>

<%- include('../layout/footer') %>