<%- include('../layout/header') %>

<section class="py-5" style="min-height: 80vh; display: flex; align-items: center;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="card card-islamic shadow-lg">
                    <div class="card-header text-center py-4">
                        <i class="fas fa-lock fa-3x mb-3"></i>
                        <h3 class="mb-0 fw-bold">Reset Password</h3>
                        <p class="mb-0 text-light">Create a new password</p>
                    </div>
                    <div class="card-body p-4">
                        <!-- Error Messages -->
                        <% if (error_msg && error_msg.length > 0) { %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                <strong>Error!</strong> <%= error_msg[0] %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        <% } %>

                        <!-- Success Messages -->
                        <% if (success_msg && success_msg.length > 0) { %>
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>
                                <strong>Success!</strong> <%= success_msg[0] %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        <% } %>

                        <form action="/auth/reset-password/<%= token %>" method="POST" class="needs-validation" novalidate>
                            <!-- New Password Field -->
                            <div class="mb-3">
                                <label for="password" class="form-label">
                                    <i class="fas fa-lock me-2"></i>New Password
                                </label>
                                <input 
                                    type="password" 
                                    class="form-control form-control-lg" 
                                    id="password" 
                                    name="password" 
                                    placeholder="Enter new password"
                                    minlength="6"
                                    required
                                >
                                <div class="invalid-feedback">
                                    Password must be at least 6 characters.
                                </div>
                                <small class="form-text text-muted">
                                    Minimum 6 characters
                                </small>
                            </div>

                            <!-- Confirm Password Field -->
                            <div class="mb-4">
                                <label for="confirm_password" class="form-label">
                                    <i class="fas fa-lock me-2"></i>Confirm Password
                                </label>
                                <input 
                                    type="password" 
                                    class="form-control form-control-lg" 
                                    id="confirm_password" 
                                    name="confirm_password" 
                                    placeholder="Confirm your password"
                                    minlength="6"
                                    required
                                >
                                <div class="invalid-feedback">
                                    Please confirm your password.
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="btn btn-islamic w-100 btn-lg">
                                <i class="fas fa-check me-2"></i>Reset Password
                            </button>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3 bg-light">
                        <small class="text-muted">
                            <a href="/auth/student-login" class="text-islamic fw-bold text-decoration-none">
                                Back to Login
                            </a>
                        </small>
                    </div>
                </div>

                <!-- Back to Home -->
                <div class="text-center mt-4">
                    <a href="/" class="text-muted text-decoration-none">
                        <i class="fas fa-arrow-left me-2"></i>Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../layout/footer') %>
