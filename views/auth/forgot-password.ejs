<%- include('../layout/header') %>

<section class="py-5" style="min-height: 80vh; display: flex; align-items: center;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="card card-islamic shadow-lg">
                    <div class="card-header text-center py-4">
                        <i class="fas fa-key fa-3x mb-3"></i>
                        <h3 class="mb-0 fw-bold">Forgot Password</h3>
                        <p class="mb-0 text-light">Reset your password</p>
                    </div>
                    <div class="card-body p-4">
                        <!-- Error Messages -->
                        <% if (error_msg && error_msg.length > 0) { %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                <strong>Error!</strong> <%= error_msg[0] %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        <% } %>

                        <!-- Success Messages -->
                        <% if (success_msg && success_msg.length > 0) { %>
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>
                                <strong>Success!</strong> <%= success_msg[0] %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        <% } %>

                        <form action="/auth/forgot-password" method="POST" class="needs-validation" novalidate>
                            <!-- Email Field -->
                            <div class="mb-3">
                                <label for="email" class="form-label">
                                    <i class="fas fa-envelope me-2"></i>Email Address
                                </label>
                                <input 
                                    type="email" 
                                    class="form-control form-control-lg" 
                                    id="email" 
                                    name="email" 
                                    placeholder="Enter your registered email"
                                    required
                                >
                                <div class="invalid-feedback">
                                    Please enter a valid email address.
                                </div>
                            </div>

                            <!-- Info Alert -->
                            <div class="alert alert-info mb-4" role="alert">
                                <i class="fas fa-info-circle me-2"></i>
                                <small>
                                    Enter the email address associated with your account. 
                                    We'll send you a link to reset your password.
                                </small>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="btn btn-islamic w-100 btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Send Reset Link
                            </button>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3 bg-light">
                        <small class="text-muted">
                            Remember your password? 
                            <a href="/auth/student-login" class="text-islamic fw-bold text-decoration-none">
                                Back to Login
                            </a>
                        </small>
                    </div>
                </div>

                <!-- Back to Home -->
                <div class="text-center mt-4">
                    <a href="/" class="text-muted text-decoration-none">
                        <i class="fas fa-arrow-left me-2"></i>Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../layout/footer') %>
