<%- include('../layout/header') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-envelope me-2"></i>Contact Messages</h2>
                <div>
                    <span class="badge bg-primary">Total: <%= messages.length %></span>
                    <% const unreadCount = messages.filter(m => m.status === 'unread').length; %>
                    <% if (unreadCount > 0) { %>
                        <span class="badge bg-danger ms-2">Unread: <%= unreadCount %></span>
                    <% } %>
                </div>
            </div>

            <!-- Messages Table -->
            <div class="card shadow">
                <div class="card-body">
                    <% if (messages.length === 0) { %>
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No contact messages yet</h5>
                            <p class="text-muted">When visitors submit the contact form, their messages will appear here.</p>
                        </div>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Status</th>
                                        <th>From</th>
                                        <th>Email</th>
                                        <th>Subject</th>
                                        <th>Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% messages.forEach(message => { %>
                                        <tr class="<%= message.status === 'unread' ? 'table-info' : '' %>">
                                            <td>
                                                <% if (message.status === 'unread') { %>
                                                    <span class="badge bg-danger">Unread</span>
                                                <% } else if (message.status === 'read') { %>
                                                    <span class="badge bg-info">Read</span>
                                                <% } else if (message.status === 'replied') { %>
                                                    <span class="badge bg-success">Replied</span>
                                                    <% if (message.staff_first_name) { %>
                                                        <br><small class="text-muted">by <%= message.staff_first_name %> <%= message.staff_last_name %></small>
                                                    <% } %>
                                                <% } else if (message.status === 'archived') { %>
                                                    <span class="badge bg-secondary">Archived</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <strong><%= message.name %></strong>
                                            </td>
                                            <td>
                                                <a href="mailto:<%= message.email %>"><%= message.email %></a>
                                            </td>
                                            <td>
                                                <%= message.subject %>
                                            </td>
                                            <td>
                                                <small><%= new Date(message.created_at).toLocaleDateString() %></small><br>
                                                <small class="text-muted"><%= new Date(message.created_at).toLocaleTimeString() %></small>
                                            </td>
                                            <td>
                                                <div class="d-flex gap-2">
                                                    <a href="/staff/contact-messages/<%= message.id %>" class="btn btn-sm btn-primary" title="View & Reply">
                                                        <i class="fas fa-eye"></i> View
                                                    </a>
                                                    <form action="/staff/contact-messages/<%= message.id %>/delete" method="POST" onsubmit="return confirm('Delete this message?');">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Back to Dashboard -->
            <div class="mt-4">
                <a href="/staff/dashboard" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

<script>
// Auto-refresh every 30 seconds to check for new messages
setTimeout(function() {
    location.reload();
}, 30000);
</script>

<%- include('../layout/footer') %>
