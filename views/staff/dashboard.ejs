<%- include('../layout/header') %>

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="display-4 fw-bold mb-4">Staff Dashboard</h1>
                <p class="lead mb-4">Welcome back, <%= staff.name %>!</p>
                
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-users fa-3x text-primary mb-3"></i>
                                <h5 class="card-title">Students</h5>
                                <p class="card-text">Manage student records</p>
                                <a href="#" class="btn btn-primary">Manage Students</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-calendar fa-3x text-success mb-3"></i>
                                <h5 class="card-title">Schedule</h5>
                                <p class="card-text">View and manage schedules</p>
                                <a href="#" class="btn btn-success">View Schedule</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-chart-line fa-3x text-info mb-3"></i>
                                <h5 class="card-title">Reports</h5>
                                <p class="card-text">Generate reports</p>
                                <a href="#" class="btn btn-info">View Reports</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../layout/footer') %>