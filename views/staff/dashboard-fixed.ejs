<%- include('../layout/header') %>

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="display-4 fw-bold mb-4">Staff Dashboard</h1>
                <p class="lead mb-4">Welcome back, <%= staff.name %>!</p>
                
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-users fa-3x text-primary mb-3"></i>
                                <h5 class="card-title">Students</h5>
                                <h2 class="fw-bold text-primary"><%= typeof studentCount !== 'undefined' ? studentCount : '...' %></h2>
                                <p class="card-text text-muted">Registered Students</p>
                                <a href="/staff/manage-students" class="btn btn-primary">Manage Students</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-calendar fa-3x text-success mb-3"></i>
                                <h5 class="card-title">Schedule</h5>
                                <p class="card-text">View and manage schedules</p>
                                <a href="#" class="btn btn-success">View Schedule</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-chart-line fa-3x text-info mb-3"></i>
                                <h5 class="card-title">Reports</h5>
                                <p class="card-text">Generate reports</p>
                                <a href="#" class="btn btn-info">View Reports</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mt-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-file-upload fa-3x text-warning mb-3"></i>
                                <h5 class="card-title">Upload Results</h5>
                                <p class="card-text">Upload student exam results</p>
                                <a href="/staff/upload-result" class="btn btn-warning text-white">Upload Result</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mt-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-list-alt fa-3x text-primary mb-3"></i>
                                <h5 class="card-title">View Results</h5>
                                <p class="card-text">Check student totals</p>
                                <a href="/staff/view-results" class="btn btn-primary text-white">Check Results</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mt-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-envelope fa-3x text-info mb-3"></i>
                                <h5 class="card-title">Contact Messages</h5>
                                <p class="card-text">Manage inquiries</p>
                                <a href="/staff/contact-messages" class="btn btn-info text-white">View Messages</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../layout/footer') %>
